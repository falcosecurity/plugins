{
  "version": 3,
  "configurePresets": [
    {
      "name": "vcpkg-release",
      "displayName": "VCPKG Release Configuration",
      "description": "VCPKG release build configuration",
      "generator": "Unix Makefiles",
      "binaryDir": "${sourceDir}/build",
